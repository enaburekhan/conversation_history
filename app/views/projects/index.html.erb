<h1 class="text-2xl font-semibold text-center my-8">Projects</h1>

<div class="text-center mb-8">
  <h1 class="font-bold text-4xl mb-4">Welcome to Conversation History</h1>
</div>

<ul class="space-y-4">
  <% @projects.each do |project| %>
    <li class="bg-gray-100 p-4 rounded shadow-lg hover:bg-gray-200 transition duration-300 ease-in-out">
      <%= link_to project.name, project, class: "text-blue-500 font-semibold hover:underline" %> 
      <span class="text-gray-600">- Status: <%= project.status %></span>
    </li>
  <% end %>
</ul>

